<style>
  .section {
      padding: 100px 0;
  }

  .section__header {
      text-align: center;
      margin-bottom: 60px;
  }

  .section__title {
      font-family: var(--font-display, 'Cinzel', serif);
      font-size: 40px;
      margin-bottom: 10px;
      color: var(--color-primary, #8e24aa);
  }

  .section__subtitle {
      font-size: 14.4px;
      letter-spacing: 1.44px;
      color: #888;
  }

  .products__grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 40px;
  }

  .strength-card {
      background: #2a2a2a;
      padding: 40px;
      border-radius: 8px;
      border: 1px solid rgba(255, 255, 255, 0.05);
      height: 100%;
      transition: transform 0.3s ease;
  }

  .strength-card:hover {
      transform: translateY(-5px);
      border-color: var(--color-primary, #8e24aa);
  }

  .strength-card__num {
      font-family: var(--font-display, 'Cinzel', serif);
      font-size: 48px;
      color: rgba(142, 36, 170, 0.2);
      line-height: 1;
      margin-bottom: 10px;
  }

  .strength-card__title {
      font-size: 20px;
      margin-bottom: 15px;
      color: var(--color-primary, #8e24aa);
  }

  .strength-card__text {
      font-size: 15px;
      color: #bbb;
      line-height: 1.8;
  }

  @media (max-width: 768px) {
    .section {
        padding: 60px 0;
    }
    .section__title {
        font-size: 32px;
    }
    .strength-card {
        padding: 30px;
    }
  }
</style>

<section class="section strength">
    <div class="container">
        <div class="section__header">
            <h2 class="section__title">{{ section.settings.title }}</h2>
            <p class="section__subtitle">{{ section.settings.subtitle }}</p>
        </div>
        <div class="products__grid">
            {% for block in section.blocks %}
                <div class="strength-card" {{ block.shopify_attributes }}>
                    <div class="strength-card__num">{{ block.settings.number }}</div>
                    <h3 class="strength-card__title">{{ block.settings.title }}</h3>
                    <div class="strength-card__text">{{ block.settings.text }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

