<style>
  .section {
      padding: 100px 0;
  }

  .section__header {
      text-align: center;
      margin-bottom: 60px;
  }

  .section__title {
      font-family: var(--font-display, 'Cinzel', serif);
      font-size: 40px;
      margin-bottom: 10px;
      color: var(--color-primary, #8e24aa);
  }

  .section__subtitle {
      font-size: 14.4px;
      letter-spacing: 1.44px;
      color: #888;
  }

  .concept__content {
      text-align: center;
      max-width: 800px;
      margin: 0 auto 40px;
  }

  .concept__content p {
      color: #bbb;
      line-height: 1.8;
  }

  .problem {
      background-color: #222;
  }

  .problem__list {
      max-width: 800px;
      margin: 0 auto;
      display: grid;
      gap: 20px;
  }

  .problem__item {
      background: rgba(255, 255, 255, 0.03);
      padding: 24px;
      border-left: 4px solid var(--color-primary, #8e24aa);
      border-radius: 4px;
      display: flex;
      align-items: flex-start;
      gap: 15px;
  }

  .problem__item::before {
      content: '!';
      display: flex;
      align-items: center;
      justify-content: center;
      width: 24px;
      height: 24px;
      background: var(--color-primary, #8e24aa);
      color: #fff;
      border-radius: 50%;
      font-weight: bold;
      flex-shrink: 0;
      margin-top: 2px;
  }

  .problem__text {
      font-size: 16px;
      color: #ddd;
      margin: 0;
  }

  @media (max-width: 768px) {
    .section {
        padding: 60px 0;
    }
    .section__title {
        font-size: 32px;
    }
    .problem__item {
        padding: 16px;
    }
  }
</style>

<section class="section problem">
    <div class="container">
        <div class="section__header">
            <h2 class="section__title">{{ section.settings.title }}</h2>
            <p class="section__subtitle">{{ section.settings.subtitle }}</p>
        </div>
        {%- if section.settings.intro_text != blank -%}
          <div class="concept__content">
              {{ section.settings.intro_text }}
          </div>
        {%- endif -%}
        <div class="problem__list">
            {%- for block in section.blocks -%}
                <div class="problem__item" {{ block.shopify_attributes }}>
                    <p class="problem__text">{{ block.settings.text }}</p>
                </div>
            {%- endfor -%}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Problem List",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Common Issues"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "こんなお悩みありませんか？"
    },
    {
      "type": "richtext",
      "id": "intro_text",
      "label": "Intro Text",
      "default": "<p>これからスタジオを開業されるオーナー様へ。このような不安はありませんか？</p>"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Issue Item",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Issue Text",
          "default": "悩みや課題の内容を記入してください"
        }
      ]
    }
  ],
  "presets": [
    {
